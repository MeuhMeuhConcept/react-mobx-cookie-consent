{
  "include": [
    "src/js/**/*"
  ],
  "compilerOptions": {
    "outDir": "build",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "experimentalDecorators": true,
    "baseUrl": "./src/js"
  },
  "exclude": ["node_modules"]
}
